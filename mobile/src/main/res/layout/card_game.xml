<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/cardParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.daweber.brackets.view.ResizeTextView
                android:id="@+id/team_one"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_pick_red"
                android:drawableRight="@drawable/ic_pick_red"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/team_one_score"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.daweber.brackets.view.ResizeTextView
                android:id="@+id/team_two"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/team_two_score"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="106"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <com.daweber.brackets.view.ResizeTextView
            android:id="@+id/game_details"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:maxLines="1"
            android:text="SAT | MAR 30 @ 10 EST [Chestertonvillesnookburg, USA]"
            android:textColor="@color/eggshell"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>